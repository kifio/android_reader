<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:navigationBarColor">
            @android:color/white
        </item>

        <!-- Optional: set to transparent if your app is drawing behind the status bar. -->
        <item name="android:statusBarColor">
            @android:color/white
        </item>

        <!-- Optional: set the status bar light and content dark. -->
        <item name="android:windowLightStatusBar">
            true
        </item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:popupAnimationStyle">@null</item>

    </style>

    <style name="ReaderToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/primary</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="ReaderBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:background">@color/background</item>
    </style>



</resources>